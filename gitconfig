[alias]
  # list alias and edit git config
  lc = "!git config -l | grep alias | cut -c 7-"
  ec = config --global -e

  a = add
  b = branch
	c = commit -v
  cm = commit -m
  cam = !git add -A && git commit -m
  co = checkout
  cob = checkout -b
  r = remote
  rh = reset HEAD
  rhh = reset HEAD --hard
	p = pull
	up = push
	s = status -s

	# Show the diff between the latest commit and the current state
	d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  df = diff --color --color-words --abbrev
  dfc = diff --cached

  le = log --oneline --decorate
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  lh = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  who = shortlog -s --

  # Open local git server
  serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git

[color]
	ui = true

[core]
	excludesfile = /Users/kaelumania/.gitignore_global
	attributesfile = ~/.gitattributes
	editor = vim
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
[merge]
    tool = opendiff

[help]
	autocorrect = 1

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
  default = simple
[user]
	email = epping@bitside.de
	name = Stephan Epping
[filter "media"]
  clean = git media clean %f
  smudge = git media smudge %f
  required = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/kaelumania/.stCommitMsg
